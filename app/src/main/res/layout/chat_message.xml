<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widgetLeft"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible">

    <ImageView
        android:id="@+id/avatarLeft"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/userNameLeft"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignLeft="@id/avatarLeft"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:minWidth="50dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/avatarLeft"
        android:layout_alignTop="@id/userName"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/message_left">

        <TextView
            android:id="@+id/messageLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


</RelativeLayout>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/widgetRight"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:visibility="visible">

<ImageView
    android:id="@+id/avatarRight"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp" />

<TextView
    android:id="@+id/userNameRight"
    android:layout_width="wrap_content"
    android:layout_height="20dp"
    android:layout_alignRight="@id/avatarRight"
    android:layout_alignParentTop="true"
    android:layout_marginTop="10dp"
    android:layout_marginRight="50dp"
    android:minWidth="50dp"
    />

<TextView
    android:id="@+id/messageRight"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignRight="@id/avatarRight"
    android:layout_alignTop="@id/userName"
    android:layout_marginTop="30dp"
    android:layout_marginRight="50dp"
    android:layout_marginLeft="50dp"
    android:minWidth="50dp"
    android:background="@drawable/message_right"
    tools:ignore="NotSibling" />

</RelativeLayout>

</FrameLayout>